package Likelihood

# $Id$

use astro  v*
use cfitsio v1* IExternal

private

# allow use of internal path
macro_prepend cppflags "-I ../src " WIN32 "/I..\src "

macro my_headers "" WIN32 "*.h"
library Likelihood -no_share $(my_headers) *.cxx

# test application
application test_Likelihood *.cxx test/*.cxx